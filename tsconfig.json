{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitOverride": true,

    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,

    "ignoreDeprecations": "6.0"
  },
  "include": ["src"],
  "exclude": ["dist", "**/*.test.ts", "node_modules"]
}
